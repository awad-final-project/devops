# Backend Environment Configuration
# Managed by Ansible

# MongoDB Configuration
MONGO_URI=mongodb://{{ mongo_root_user }}:{{ mongo_root_password }}@mongo:27017
MONGO_DB=user_registration

# JWT Configuration
JWT_SECRET={{ jwt_secret }}

# CORS & Frontend
CORS_ORIGIN=https://{{ domain_name }}
FRONTEND_URL=https://{{ domain_name }}

# Google OAuth (Optional)
GOOGLE_CLIENT_ID={{ google_client_id | default('') }}
GOOGLE_CLIENT_SECRET={{ google_client_secret | default('') }}
GOOGLE_CALLBACK_URL=https://{{ domain_name }}/api/auth/google/callback

# Application
PORT=3000
NODE_ENV=production
