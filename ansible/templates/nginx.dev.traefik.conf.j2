user nginx;
worker_processes auto;
error_log /var/log/nginx/error.log warn;
pid /var/run/nginx.pid;

events {
    worker_connections 1024;
}

http {
    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    log_format main '$remote_addr - $remote_user [$time_local] "$request" '
                    '$status $body_bytes_sent "$http_referer" '
                    '"$http_user_agent" "$http_x_forwarded_for"';

    access_log /var/log/nginx/access.log main;

    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;
    client_max_body_size 20M;

    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml text/javascript 
               application/json application/javascript application/xml+rss 
               application/rss+xml font/truetype font/opentype 
               application/vnd.ms-fontobject image/svg+xml;

    # Docker DNS resolver
    resolver 127.0.0.11 valid=30s;

    # HTTP Server - Traefik handles SSL, so we just listen on 80
    server {
        listen 80;
        server_name _;

        # Backend API routes
        location /api/ {
            set $backend_upstream http://{{ app_name }}-backend:3000;
            rewrite ^/api/(.*)$ /$1 break;
            
            proxy_pass $backend_upstream;
            proxy_http_version 1.1;
            
            # Use the upstream hostname instead of the client's Host header
            # This prevents issues if the backend rejects unknown Host headers
            proxy_set_header Host {{ app_name }}-backend:3000;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            
            proxy_connect_timeout 300s;
            proxy_send_timeout 300s;
            proxy_read_timeout 300s;
        }

        # Frontend routes
        location / {
            set $frontend_upstream http://{{ app_name }}-frontend:80;
            proxy_pass $frontend_upstream;
            proxy_http_version 1.1;

            # Use the upstream hostname to match the successful curl test
            proxy_set_header Host {{ app_name }}-frontend:80;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;

            proxy_connect_timeout 300s;
            proxy_send_timeout 300s;
            proxy_read_timeout 300s;

            proxy_intercept_errors on;
            error_page 404 = @frontend_dev;
        }

        # Fallback for SPA routing
        location @frontend_dev {
            set $frontend_upstream http://{{ app_name }}-frontend:80;
            proxy_pass $frontend_upstream;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
    }
}
